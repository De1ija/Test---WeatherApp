<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.weatherapp.activities.MainActivity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="Choose your City:"/>

            <Spinner
                android:id="@+id/city_list_spinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/weather_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show weather"
                android:background="@drawable/button_selector"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <include
            android:id="@+id/primary_info"
            layout="@layout/primary_weather_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include
            android:id="@+id/extra_details"
            layout="@layout/extra_weather_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/forecast_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            android:gravity="center">

            <!--            <TextView
                            android:id="@+id/spinner_position_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Spinner position" />-->

            <Button
                android:id="@+id/forecast_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@color/colorBackground"
                android:text="@string/forecast_button" />

            <!--            <TextView
                            android:id="@+id/spinner_id_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Spinner ID" />-->
        </LinearLayout>
    </LinearLayout>
</layout>

